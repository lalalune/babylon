# Example .env.local configuration with Weights & Biases
# Copy this file to .env.local and fill in your actual values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/babylon"

# Privy Authentication
NEXT_PUBLIC_PRIVY_APP_ID="your_privy_app_id"
PRIVY_APP_SECRET="your_privy_app_secret"

# ============================================
# AI Provider Configuration
# ============================================
# The system uses the first available provider in this order:
# wandb → groq → claude → openai

# 1. Weights & Biases (PRIMARY - Recommended)
# Get your API key: https://wandb.ai/authorize
WANDB_API_KEY="your_wandb_api_key_here"

# Optional: Specify default model (can also be set in Admin → AI Models)
# If not set, defaults to meta-llama/Llama-3.3-70B-Instruct
WANDB_MODEL="meta-llama/Llama-3.3-70B-Instruct"

# Require at least this many fresh trajectories before cron runs GRPO
TRAINING_MIN_TRAJECTORIES="1000"
# Automatically provision embedded wallets for agents (needs Privy env vars)
AUTO_CREATE_AGENT_WALLETS="true"

# 2. Groq (FALLBACK - Fast inference)
# Get your API key: https://console.groq.com
GROQ_API_KEY="gsk_your_groq_api_key_here"

# 3. Claude (FALLBACK - Anthropic)
# Get your API key: https://console.anthropic.com
ANTHROPIC_API_KEY="sk-ant-your_claude_api_key_here"

# 4. OpenAI (FINAL FALLBACK)
# Get your API key: https://platform.openai.com
OPENAI_API_KEY="sk-proj-your_openai_api_key_here"

# ============================================
# Optional: Override market decision model
# ============================================
# By default uses same provider as above
# Uncomment to use specific model for market decisions
# MARKET_DECISION_MODEL="gpt-4o-mini"
# MARKET_DECISION_MAX_OUTPUT_TOKENS="4000"

# ============================================
# Redis (Recommended for Production)
# ============================================
UPSTASH_REDIS_REST_URL="https://your-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_token"

# ============================================
# Blockchain Configuration (Optional)
# ============================================
NEXT_PUBLIC_DIAMOND_ADDRESS="0x..."
DEPLOYER_PRIVATE_KEY="0x..."
NEXT_PUBLIC_RPC_URL="https://sepolia.base.org"

# ============================================
# Cron Security
# ============================================
# Generate with: openssl rand -hex 32
CRON_SECRET="your_random_secret_here"

# ============================================
# Additional Configuration
# ============================================
# Game tick budget (milliseconds)
GAME_TICK_BUDGET_MS="180000"

# Enable debug logging
DEBUG="false"

# Node environment
NODE_ENV="development"

