# ============================================================================
# Babylon Prediction Markets Plugin - Environment Variables Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ============================================================================
# Required Configuration
# ============================================================================
# OpenAI API key for agent model provider (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Agent Authentication (Required for Trading)
# ============================================================================
# Agent identifier for authentication
# Default: babylon-agent-default
BABYLON_AGENT_ID=babylon-agent-default

# Secret key for agent authentication (enables trading)
# Generate with: openssl rand -hex 32
BABYLON_AGENT_SECRET=your_secure_random_secret_here_32_bytes_minimum

# ============================================================================
# API Configuration
# ============================================================================
# Base URL for Babylon API
# Default: http://localhost:3000
BABYLON_API_URL=http://localhost:3000

# Optional: Auth token for API requests (if using token-based auth)
# BABYLON_AUTH_TOKEN=your_auth_token_here

# ============================================================================
# Trading Limits (Optional - can be set in character settings)
# ============================================================================
# Maximum trade size in USD
# Default: 100
BABYLON_MAX_TRADE_SIZE=100

# Maximum total position size in USD
# Default: 500
BABYLON_MAX_POSITION_SIZE=500

# Minimum confidence threshold for trades (0.0 to 1.0)
# Default: 0.6
BABYLON_MIN_CONFIDENCE=0.6

# ============================================================================
# A2A (Agent-to-Agent) Configuration (Optional)
# ============================================================================
# WebSocket server endpoint for real-time agent communication
# Default: ws://localhost:8081
BABYLON_A2A_ENDPOINT=ws://localhost:8081

# Enable A2A integration (true/false)
# Default: true
BABYLON_A2A_ENABLED=true

# ============================================================================
# Database Configuration (Optional)
# ============================================================================
# SQLite database file path for agent storage
# Default: ./data/babylon-agents.db
SQLITE_FILE=./data/babylon-agents.db
