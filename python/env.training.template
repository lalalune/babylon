# Babylon RL Continuous Training Configuration
# Copy this file to .env.training and fill in your values

# === REQUIRED ===
DATABASE_URL=postgresql://user:password@host:port/database
OPENPIPE_API_KEY=your_openpipe_api_key_here

# W&B Training (Serverless RL with ART + RULER + CoreWeave)
WANDB_API_KEY=your_wandb_api_key  # Get from https://wandb.ai/settings
WANDB_ENTITY=your_username_or_team  # Your W&B username or team name
WANDB_PROJECT=babylon-rl-continuous  # Project name (optional)

# === ENVIRONMENT ===
TRAINING_ENV=local
TRAIN_RL_LOCAL=true

# === DATA COLLECTION ===
WINDOW_DURATION_HOURS=1
MIN_AGENTS_PER_WINDOW=3
MIN_ACTIONS_PER_TRAJECTORY=5

# === TRAINING ===
TRAINING_FREQUENCY_WINDOWS=1
MODEL_NAME=Qwen/Qwen2.5-0.5B-Instruct
BATCH_SIZE=4
GRADIENT_ACCUMULATION_STEPS=2
ITERATIONS_PER_WINDOW=10
LEARNING_RATE=1e-6
KL_PENALTY=0.05

# === DEPLOYMENT ===
LOCAL_ENDPOINT=http://localhost:8000
DEPLOYMENT_STRATEGY=replace

# === STORAGE ===
CHECKPOINT_DIR=./checkpoints
LOGS_DIR=./logs
METRICS_DIR=./metrics

# === MONITORING (optional) ===
WANDB_API_KEY=
WANDB_PROJECT=babylon-rl-continuous
LOG_LEVEL=INFO

# === MODES ===
MODE=continuous
BACKFILL_HOURS=24

